<section class="container mt-5 mb-4">
    <div class="profile-container">
        <h1 class="mb-3">Profile Information</h1>
        <div class="form-group">
            <label for="profile"><strong>Profile</strong></label>
            <div class="d-flex align-items-center">
                <img src="https://via.placeholder.com/100" alt="Profile Photo" class="profile-image">
                <button class="btn btn-primary btn-update-photo">Update Photo</button>
            </div>
        </div>
        <div class="form-group">
            <label for="firstName" class="mb-2"><strong>First Name</strong></label>
            <input type="text" id="firstName" class="form-control" placeholder="John">
        </div>
        <div class="form-group">
            <label for="lastName" class="mb-2"><strong>Last Name</strong></label>
            <input type="text" id="lastName" class="form-control" placeholder="Doe">
        </div>
        <div class="form-group">
            <label for="phone" class="mb-2"><strong>Phone</strong></label>
            <input type="tel" id="phone" class="form-control" placeholder="+1 809-555-1234">
        </div>
        <div class="btn-container">
            <a class="btn btn-secondary" href="javascript:history.back()">Back</a>
            <button class="btn btn-primary ml-2 send">Save</button>
        </div>
    </div>
</section>