    <h1>Edit Product</h1>
    <form action="/commerce/products/edit/{{product.id}}" method="POST" enctype="multipart/form-data">
        <label for="name">Name:</label>
        <input type="text" name="name" value="{{product.name}}" required>
        <label for="description">Description:</label>
        <textarea name="description" required>{{product.description}}</textarea>
        <label for="price">Price:</label>
        <input type="number" name="price" value="{{product.price}}" step="0.01" required>
        <label for="image">Image:</label>
        <input type="file" name="image">
        <label for="categoryId">Category:</label>
        <select name="categoryId" required>
            {{#each categories}}
            <option value="{{this.id}}" {{#ifEquals ../product.categoryId this.id}}selected{{/ifEquals}}>{{this.name}}</option>
            {{/each}}
        </select>
        <button type="submit">Update product</button>
        <a href="/commerce/products" class="btn">Go back</a>
    </form>