<div class="container mt-4">
    <h2>My Orders</h2>
    {{#each orders}}
    <div class="order-card card mb-3">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <div>
                    <h6 class="card-subtitle mb-2 text-muted">{{this.status}}</h6>
                    <h5 class="card-title">{{this.commerceName}}</h5>
                    <p class="card-text">RD$ {{this.total}} - {{this.products.length}} products</p>
                    <small class="text-muted">{{formatDate this.createdAt}}</small>
                </div>
                <div>
                    <img src="{{this.commerceImage}}" alt="{{this.commerceName}}" class="img-thumbnail">
                </div>
            </div>
        </div>
    </div>
    {{/each}}

    <!-- Sample Data -->
