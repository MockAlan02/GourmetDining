<div class="container mt-4">
  <h2>My Profile</h2>
  <form action="/commerce/profile/update" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="logo" class="form-label">Logo</label>
      <input type="file" class="form-control" id="logo" name="logo">
    </div>
    <div class="mb-3">
      <label for="openingTime" class="form-label">Opening hour</label>
      <input type="time" class="form-control" id="openingTime" name="openingTime" value="{{commerce.openingTime}}" required>
    </div>
    <div class="mb-3">
      <label for="closingTime" class="form-label">Closing hour</label>
      <input type="time" class="form-control" id="closingTime" name="closingTime" value="{{commerce.closingTime}}" required>
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">Phone number</label>
      <input type="text" class="form-control" id="phone" name="phone" value="{{commerce.phone}}" required>
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" name="email" value="{{commerce.email}}" required>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <button type="button" class="btn btn-secondary" onclick="goBack()">Go back</button>
  </form>
</div>

<script>
  function goBack() {
    window.history.back();
  }
</script>
