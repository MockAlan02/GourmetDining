<section class="container mt-5 mb-3">
  <section class="p-4 rounded shadow" style="background-color: white;">
    <div class="form__start_commerce">
      <h1>Create New Category</h1>
      <form action="/commerce/categories/create" method="post">
        <div class="form-group">
          <label for="name" class="form-label">Name</label>
          <input type="text" name="name" placeholder="Fast food" id="name" class="form-control" required />
        </div>
        <div class="form-group">
          <label for="description" class="form-label">Description</label>
          <textarea name="description" id="description" class="form-control" placeholder="Your description" rows="4" required></textarea>
        </div>
        <div class="btn__space">
          <button type="submit" class="btn btn__order" style="color: white; background-color:#E30613;">Save</button>
          <a href="/commerce" class="btn btn-secondary">Go Back</a>
        </div>
      </form>
    </div>

  </section>