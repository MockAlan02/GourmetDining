<h1>Delivery List</h1>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Orders delivered</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each deliveries}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.lastName}}</td>
      <td>0</td>
      <td>{{this.phone}}</td>
      <td>{{this.email}}</td>
      <td>
        {{#if this.isActive}}
        <form action="/admin/deliveries/toggle/{{this.id}}" method="POST">
          <button type="submit" class="btn btn-danger">Inactivate</button>
        </form>
        {{else}}
        <form action="/admin/deliveries/toggle/{{this.id}}" method="POST">
          <button type="submit" class="btn btn-success">Activate</button>
        </form>
        {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
