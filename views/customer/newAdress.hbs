<section class="container mt-5 mb-5">
  <div class="new-address">
    <h1 class="h4 text-center mb-4">{{#if address}}Update Address {{else}} New Address{{/if}}</h1>
    <div class="p-4 form__space">
      <form method="post" action="{{#if address}}/customer/form/editAdress/{{address.id}} {{else}}/customer/form/newAdress{{/if}}">
        {{#if address}}
          <input type="hidden" name="id" value="{{address.id}}" />
        {{/if}}
        <div class="form-group">
          <label for="addressName" class="mb-2">Address Name</label>
          <input
            type="text"
            class="form-control"
            id="addressName"
            value="{{#if address}}{{address.name}}{{/if}}"
            name="name"
            placeholder="Home"
            required
          />
        </div>
        <div class="form-group">
          <label for="addressDescription" class="mb-2">Address Description</label>
          <input
            type="text"
            class="form-control"
            name="address"
            value="{{#if address}}{{address.address}}{{/if}}"
            id="addressDescription"
            placeholder="C/Cerro Mar .apt: 304"
            required
          />
        </div>
        <div class="form-buttons">
          <a class="btn btn-secondary" href="javascript:history.back()">Back</a>
          <button type="submit" class="btn btn-create add">{{#if address}}Update {{else}}Creates{{/if}}</button>
        </div>
      </form>
    </div>
  </div>
</section>